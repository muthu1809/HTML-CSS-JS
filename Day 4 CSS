resume.css: 

h2
{
font: 15px Arial;
color: white;
background-color: grey; 
position: sticky;
top:0;
left: 0; 
}

.col-1
{
float:left; 
width: 30%; 
}

table
{
border: 2px solid grey; 
border-collapse: collapse;
margin-left: 10px; 
}
th
{
width: 8%; 
}
td
{
text-align: center; 
background-color: #a1b1b1;
}

.signature
{
float:right; 
margin-right: 20px; 
}

img {
height: 50px;
width: 50px;
display: flex; 
float: right; 

}
