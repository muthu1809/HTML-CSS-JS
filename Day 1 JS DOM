SSLC Mark Calculator: 

<label for="s1"> Tamil </label>
<input type="text" id="sub1"><br>
<label for="s1"> English </label>
<input type="text" id="sub2"><br>
<label for="s1"> Maths </label>
<input type="text" id="sub3"><br>
<label for="s1"> Science </label>
<input type="text" id="sub4"><br>
<label for="s1"> Social </label>
<input type="text" id="sub5"><br>
<button onclick="calculate_total()"> Calculate </button>
<script>
function calculate_total()
{
let tamil = document.getElementById("sub1").value; 
let english = document.getElementById("sub2").value; 
let maths = document.getElementById("sub3").value; 
let science = document.getElementById("sub4").value; 
let social = document.getElementById("sub5").value; 
total = tamil + english + maths + science + social; 
alert(total)
}
</script>

<script>
function calculate_total()
{
let tamil = Number(document.getElementById("sub1").value); 
let english = Number(document.getElementById("sub2").value); 
let maths = Number(document.getElementById("sub3").value); 
let science = Number(document.getElementById("sub4").value); 
let social = Number(document.getElementById("sub5").value); 
total = tamil + english + maths + science + social; 
alert(total)
}
</script>

